@import url('https://fonts.googleapis.com/css?family=Open+Sans|Open+Sans+Condensed:700&display=swap');
*, *::before, *::after 
    content ""
    margin 0 
    padding 0 
    box-sizing border-box

html, body 
    box-sizing inherit

h1, h2, h3, h4, h5, h6
    font-family: 'Open Sans Condensed', Arial, Helvetica, sans-serif;

p, label, input, textarea, button, a
  font-family: 'Open Sans', Arial, Helvetica, sans-serif

error() 
    background lighten(red, 50%)
    
inputStyles()
    display block 
    padding 15px 10px
    width 100%
    border-radius 5px 
    border 1px solid lighten(#333, 50%)
    margin-top 10px
    &:focus 
        border 1px solid darken(#33c3f0, 50%)
